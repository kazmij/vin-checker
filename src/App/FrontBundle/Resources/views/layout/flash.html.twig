{% spaceless %}
    {% if app.session.flashbag.peekAll()|length %}
        <div class="systemMessagesInner col-sm-12 col-xs-12 col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-3"
             style="">
            {% for label, messages in app.session.flashbag.all %}
                {% for msg in messages %}
                    <div class="alert alert-{{ label }} text-center">
                        <strong>{{ msg|raw }}</strong>
                    </div>
                {% endfor %}
            {% endfor %}
            {% set cleaned = app.session.flashbag.clear() %}
        </div>
    {% endif %}
{% endspaceless %}
