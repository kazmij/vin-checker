{% extends '@AppAdmin/layout.html.twig' %}

{% block content %}

    <div class="col-md-12">
        <div class="clearfix"></div>
        {% include '@AppAdmin/Banner/partials/buttonsEdit.html.twig' %}

        <fieldset>
            <legend>{{ 'Banner edit'|trans }}</legend>
        </fieldset>

        {{ form_start(edit_form) }}
        {{ form_widget(edit_form.translations) }}
        <div class="form-group">
            {{ form_label(edit_form.fileMobileUpload) }}
            {% if edit_form.vars.value.fileMobile %}
                <div><a target="_blank" href="{{ edit_form.vars.value.fileMobile | amazonUrl }}">{{ edit_form.vars.value.fileMobile | amazonUrl }}</a></div>
            {% endif %}
            {{ form_widget(edit_form.fileMobileUpload) }}
            {{ form_errors(edit_form.fileMobileUpload) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.fileDesktopUpload) }}
            {% if edit_form.vars.value.fileDesktop %}
                <div><a target="_blank" href="{{ edit_form.vars.value.fileDesktop | amazonUrl }}">{{ edit_form.vars.value.fileDesktop | amazonUrl }}</a></div>
            {% endif %}
            {{ form_widget(edit_form.fileDesktopUpload) }}
            {{ form_errors(edit_form.fileDesktopUpload) }}
        </div>
        {{ form_row(edit_form.places) }}
        {{ form_rest(edit_form) }}
        <div class="form-group">
            <br/>
            <button type="submit" name="submit" class="btn btn-primary btn-lg"><i
                        class="fa fa-save"></i> {{ 'Save'|trans }}</button>
        </div>
        {{ form_end(edit_form) }}
    </div>
{% endblock %}

        {% block javascripts %}
            {{ parent() }}
        {% endblock %}






